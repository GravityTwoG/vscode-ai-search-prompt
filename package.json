{
  "name": "ai-search-prompt",
  "displayName": "ai-search-prompt",
  "description": "AI-powered search prompt for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": []
    },
    "views": {
      "search": [
        {
          "id": "aiSearchPrompt",
          "name": "AI Search Prompt",
          "when": "searchViewletVisible"
        }
      ]
    },
    "commands": [
      {
        "command": "ai-search-prompt.submitPrompt",
        "title": "Submit Search Prompt"
      }
    ],
    "configuration": {
      "title": "AI Search Prompt",
      "properties": {
        "aiSearchPrompt.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for the AI service"
        },
        "aiSearchPrompt.apiEndpoint": {
          "type": "string",
          "default": "https://api.openai.com/v1/completions",
          "description": "Endpoint URL for the AI service"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "vsce-package": "vsce package",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.2",
    "esbuild": "^0.24.2",
    "eslint": "^9.19.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  }
}
